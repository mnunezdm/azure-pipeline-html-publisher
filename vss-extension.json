{
    "manifestVersion": 1,
    "id": "azure-pipelines-html-publisher",
    "publisher": "mnunezdm",
    "version": "0.0.1",
    "author": "Miguel Núñez Díaz-Montes",
    "name": "Html Publisher",
    "description": "Embed HTML report in Azure Pipelines",
    "public": false,
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "icon.png"
    },
    "tags": [
        "Preview"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "repository": {
        "type": "git",
        "uri": "https://github.com/mnunezdm/azure-pipelines-html-publisher"
    },
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "LICENSE"
        }
    },
    "scopes": [
        "vso.build_execute"
    ],
    "demands": [
        "api-version/3.0"
    ],
    "contributions": [
        {
            "id": "build-html-report-tab",
            "type": "ms.vss-build-web.build-results-tab",
            "description": "Embed HTML files viewer in Azure Pipelines Release",
            "targets": [
                "ms.vss-build-web.build-results-view"
            ],
            "properties": {
                "name": "HTML Viewer",
                "uri": "dist/tabContent.html",
                "registeredObjectId": "registerBuild",
                "supportsTasks": [
                    "bf52d8fd-c399-4acd-98c7-a03ceee2a974"
                ],
                "dynamic": true
            },
            "includes": [
                "ms.vss-releaseManagement-web.release-service-data-external"
            ]
        },
        {
            "id": "PublishHtml",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "PublishHtml",
                "displayName": "Publish HTML"
            }
        }
    ],
    "files": [
        {
            "path": "./PublishHtml",
            "packagePath": "PublishHtml",
            "addressable": false
        },
        {
            "path": "./dist",
            "packagePath": "dist",
            "addressable": true
        }
    ]
}